prepare() {
	mkdir "$pkgname-$pkgver"
	cd "$pkgname-$pkgver"
	tar xJf ../data.tar.xz .
	chmod 4755 ./opt/google/chrome/chrome-sandbox
}

build() {
	cd "$pkgname-$pkgver"
}

check() {
	cd "$pkgname-$pkgver"
}

package() {
	cd "$pkgname-$pkgver"
	cp -r ./ "$pkgdir/"
}
